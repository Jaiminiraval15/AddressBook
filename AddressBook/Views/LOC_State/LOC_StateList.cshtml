@using System.Data
@model DataTable;

<table class="table table-responsive table-sm">
    <thead>
        <tr>
            <th>StateID</th>
            <th>StateName</th>
            <th>CountryName</th>
            <th>Created</th>
            <th>Modified</th>
        </tr>
    </thead>
    <tbody>
        @foreach (DataRow d in Model.Rows)
        {
            <tr>
                <td>@d["STATEID"]</td>
                <td>@d["STATENAME"]</td>
                <td>@d["COUNTRYNAME"]</td>
                <td>@Convert.ToDateTime(d["CREATED"]).ToString("dd-MM-yyyy")</td>
                <td>@Convert.ToDateTime(d["MODIFIED"]).ToString("dd-MM-yyyy")</td>
                <td>
                    <form method="post" asp-controller="LOC_State" asp-action="Delete">
                        <input type="hidden" name="ID" value="@Convert.ToInt32(d["STATEID"])">
                        <button type="submit" class="btn btn-danger btn-xs"
                                onclick="return fun1();">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>

</table>
@section Scripts
{
<script>
    function func1(){
        if(confirm("Are you sure you want to delete?"))
        return true;
        else{
            return false;
        }
    }
</script>
}